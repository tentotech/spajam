@import '../../node_modules/normalize.css'
@import url('https://fonts.googleapis.com/css?family=Handlee');
@font-face
  font-family: "sen"
  src: url("/fonts/Sen-Bold.ttf")

@font-face
  font-family: "sen-regular"
  src: url("/fonts/Sen-Regular.ttf")


*
	font-family: 'sen-regular'
	margin 0!important
	padding 0!important
	text-decoration none

.near-spots
	.near-spot
		border-bottom solid 1px #ccc
		color #444
		display flex
		padding .35em !important
		.icon
			width 20%
			display flex
			justify-content center
			align-items center
			i
				color #8bc34a
				font-size 1.5em
		.data
			width 80%
			h2
				color #8bc34a
				letter-spacing 2px
				font-size .95em
				font-weight 600
				padding .2em 0 !important
			.min-data
				p
					width 100%
					font-size .75em
					i
						color #ccc
						font-size 1.5em
						margin-right .15em!important
						vertical-align middle
					span
						vertical-align middle
main.timeline
	.items
		a.item
			border-bottom solid 1px #ccc
			display flex
			padding .5em!important
			justify-content center
			align-items center
			.icon
				width 20%
				display flex
				justify-content center
				align-items center
				position relative
				img
					width 95%
					border solid 2px #eee
					margin auto
					border-radius 100%
			.data
				width 80%
				padding 0 .5em!important
				p
					color #666
					letter-spacing 1px
					font-size .75em
					padding .15em 0 !important
					i
						color #8bc34a
						font-size 1.5em
						margin-right .1em
						vertical-align middle
					span
						vertical-align middle
				h2
					color #8bc34a
					font-weight 600
					font-size .95em
					padding .2em 0 !important
					letter-spacing 2px
					overflow: hidden
					white-space: nowrap
					text-overflow: ellipsis
					width 100%
				.min-data
					display flex
					padding .2em 0
					color #ccc!important
					font-size .9em!important
					p.addr
						width 65%
						overflow: hidden
						white-space: nowrap
						text-overflow: ellipsis
					p.time
						width 35%
						text-align right
					color #777
div.menu
	z-index 50
	position relative
	background #fefefe
	position absolute
	top 4em
	width 100%
	transform translateY(-100%)
	transition all .3s
	&.active
		transform translateY(0)
	a
		border-bottom solid 1px #ccc
		cursor pointer
		padding .5em!important
		display flex
		align-items center
		i
			display block
			width 10%
			color #8bc34a
			font-size 1.35em
			vertical-align middle
		span
			display block
			width 90%
			font-size .8em
			color #444
			vertical-align middle
div.header
	z-index 100
	width 100%
	height 4em
	position relative
	position sticky
	top 0
	left 0
	right 0
	background #fcfcfc
	border-bottom solid 1px #eee
	i.menu-icon
		position absolute
		top 50%
		right .5em
		font-size 1.75em
		color #444
		transform translateY(-50%)
	p
		text-align center
		position absolute
		top 50%
		transform translateY(-50%)
		width 100%
		padding .75em 0!important
		color #333
		font-size 1.5em
		letter-spacing 2px

.preferred-anime-config
	label
		margin .25em!important
		font-size .9em
		display inline-block
		padding .2em .35em!important
		color #fff
		border-radius 5px
		cursor pointer
		&.active-label
			background #8bc34a
		&.not-active-label
			background #777

main.spot
	.cover
		width 100%
		height 10em
		background-size cover
		background-position center
		.filter
			width 100%
			height 100%
			padding .5em
			position relative
			background linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.5) 100%);
			.title
				color #fff
				font-family: 'sen-regular'
				font-weight 400
				font-size 1.25em
				letter-spacing 2px
				padding .75em .5em!important
				position absolute
				bottom 0
				right 0
				left 0
				overflow: hidden
				white-space: nowrap
				text-overflow: ellipsis
	.info
		padding .5em!important
		p
			padding .15em 0!important
			color #444
			letter-spacing 1px
			font-size .8em
			vertical-align middle
			i
				color #8bc34a
				font-size 2em
				vertical-align middle
				display inline-block
				margin 0 .25em!important
				opacity 0.8
			span
				vertical-align middle
				font-size 1em
	.friends
		padding .5em!important
		p
			color #444
			letter-spacing 1px
			padding .5em 0 !important
			font-size .8em
		img
			border-radius 100%
			display inline-block
			width 2em
			height 2em
			margin .15em!important
	.googleMap
		position fixed
		bottom 0
		right 0
		left 0
		background #8bc34a
		text-align center
		padding .5em !important
		p
			color #fff
			letter-spacing 1px
			i
				vertical-align middle
				font-size 1.5em
				margin-right .25em!important
			span
				vertical-align middlew



main.mypage
	padding 0 .5em
	.user-info
		display flex
		padding 1em 0!important
		flex-flow: column nowrap
		align-items center
		img
			width 35%
			border solid 5px #eee
			border-radius 100%
		p.sn
			color #333
			font-size 1.05em
			padding .5em!important
			letter-spacing 1px
		p.flag
			padding .5em!important
			font-size .8em
			letter-spacing 1px
			i
				color #8bc34a
				font-size 1.25em
				margin-right .2em !important
				vertical-align middle
			span
				color #555
				vertical-align middle
	.history
		a
			border-bottom solid 1px #ddd
			display flex
			justify-content center
			align-items center
			padding .5em!important
			&:first-child
				border-top solid 1px #ddd
			.icon
				width 15%
				color #8bc34a
				display flex
				justify-content center
				align-items center
				i
					font-size 1.75em
			.data
				width 85%
				h2
					color #444
					font-weight 400
					letter-spacing 2px
					padding .35em 0!important
					font-size 1.05em
					overflow: hidden
					white-space: nowrap
					text-overflow: ellipsis
					width 100%
				p
					color #555
					font-size .8em

main.top
	height 100vh
	width 100vw
	position fixed
	top 0
	background url('/image/bg.jpg')
	background-position center
	background-size cover
	.filter
		width 100%
		height 100%
		padding-top 45%!important
		background: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.75) 100%);
	h1
		font-family: 'Handlee', cursive;
		color #efefef
		text-align center
		letter-spacing 5px
		font-size 4.25em
	.btn
		width 100vw
		padding 4em 0!important
	a
		color #eee
		background #03a9f4
		display block
		margin auto!important
		width 70%
		font-size .9em
		letter-spacing 2px
		padding .75em 1em!important
		border-radius 20px
		text-align center
