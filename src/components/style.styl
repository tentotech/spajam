@import '../../node_modules/normalize.css'
@import url('https://fonts.googleapis.com/css?family=Handlee');
@font-face 
  font-family: "sen"
  src: url("/assets/fonts/Sen-Bold.ttf")

@font-face 
  font-family: "sen-regular"
  src: url("/assets/fonts/Sen-Regular.ttf")

@media screen and ( min-width:479px )
	*
		display none

*
	font-family: 'sen-regular'
div.header
	position fixed
	top 0
	left 0
	right 0
	background #efefef
	border solid 1px #ccc
	padding .25em
	p
		text-align center
		width 100%
		padding 0
		font-size 1.2em

main.top
	height 100vh
	width 100vw
	position fixed
	top 0
	background url('/image/bg.jpg')
	background-position center
	background-size cover
	.filter
		width 100%
		height 100%
		padding-top 45%
		background: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.75) 100%);
	h1
		font-family: 'Handlee', cursive;
		color #efefef
		text-align center
		letter-spacing 5px
		font-size 4.25em
	.btn
		width 100vw
		padding 1em 0
	a
		color #eee
		background #03a9f4
		display block
		margin auto
		width 70%
		font-size .9em
		letter-spacing 2px
		padding .75em 1em
		border-radius 20px
		text-align center


