@import '../../node_modules/normalize.css'
@import url('https://fonts.googleapis.com/css?family=Handlee');
@font-face 
  font-family: "sen"
  src: url("/fonts/Sen-Bold.ttf")

@font-face 
  font-family: "sen-regular"
  src: url("/fonts/Sen-Regular.ttf")

@media screen and ( min-width:479px )
	*
		display none

*
	font-family: 'sen-regular'
	margin 0
	padding 0
	
div.header
	width 100%		
	background #fcfcfc
	border-bottom solid 1px #eee
	p
		text-align center
		width 100%
		padding .75em 0
		color #333
		font-size 1.5em
		letter-spacing 2px
		
main.mypage
	padding 0 .5em
	.user-info
		display flex
		padding 1em 0
		flex-flow: column nowrap
		align-items center
		img
			width 35%
			border solid 5px #eee
			border-radius 100%
		p.sn
			color #333
			font-size 1.05em
			padding .5em
			letter-spacing 1px
			
main.top
	height 100vh
	width 100vw
	position fixed
	top 0
	background url('/image/bg.jpg')
	background-position center
	background-size cover
	.filter
		width 100%
		height 100%
		padding-top 45%
		background: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.75) 100%);
	h1
		font-family: 'Handlee', cursive;
		color #efefef
		text-align center
		letter-spacing 5px
		font-size 4.25em
	.btn
		width 100vw
		padding 1em 0
	a
		color #eee
		background #03a9f4
		display block
		margin auto
		width 70%
		font-size .9em
		letter-spacing 2px
		padding .75em 1em
		border-radius 20px
		text-align center


